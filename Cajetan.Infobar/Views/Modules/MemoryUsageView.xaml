<UserControl x:Class="Cajetan.Infobar.Views.MemoryUsageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:v="clr-namespace:Cajetan.Infobar.Views"
             mc:Ignorable="d" d:DesignHeight="23" Margin="5 0 5 0"
             d:DataContext="{Binding MemoryUsageViewModel, Source={StaticResource DesignViewModelLocator}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="18" />
            <ColumnDefinition Width="55" />
            <ColumnDefinition Width="105"/>
            <ColumnDefinition Width="75"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="1 1 1 2"
               Source="{Binding ModuleType, Converter={StaticResource ModuleTypeToImageResourceConverter}, ConverterParameter=24}" />

        <TextBlock Grid.Column="1" Text="Memory:" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBlock Grid.Column="2" Text="{Binding Usage, FallbackValue='1234M / 4321M'}" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <v:LineGraph Grid.Column="3" Tag="MEM" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                     LineThickness="0.75" BottomMargin="1" TopMargin="2" Values="{Binding Values}" />

    </Grid>
</UserControl>
