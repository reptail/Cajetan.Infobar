<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:Cajetan.Infobar.Converters"
                    xmlns:d="clr-namespace:Cajetan.Infobar.Design">

    <!-- Misc -->
    <d:DesignViewModelLocator x:Key="DesignViewModelLocator" />

    <!-- Converters -->
    <c:HexToBrushConverter x:Key="HexToBrushConverter" />
    <c:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    <c:ModuleTypeToImageResourceConverter x:Key="ModuleTypeToImageResourceConverter" />
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

    <!-- Color definitions -->
    <SolidColorBrush x:Key="BackgroundColor">#242424</SolidColorBrush>
    <SolidColorBrush x:Key="BackgroundColorAlt">#3b3b3b</SolidColorBrush>
    <SolidColorBrush x:Key="ForegroundColor">#f8f8f8</SolidColorBrush>
    <SolidColorBrush x:Key="BorderBrush">#606060</SolidColorBrush>

</ResourceDictionary>